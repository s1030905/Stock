<div class="mb-4 text-center">
  <h1 class="h3 font-weight-normal mb-3">Login</h1>
</div>
<form class="form-signin" action="/login" method="POST">
  <div class="form-row mb-3">
    <label class="form-label" for="email">Account</label>
    <input
      class="form-control"
      id="account"
      type="text"
      name="account"
      class="form-control"
      placeholder="Account"
      required
      autofocus
    />
  </div>
  <div class="form-row mb-3">
    <label class="form-label" for="password">Password</label>
    <input
      class="form-control"
      id="password"
      type="password"
      name="password"
      class="form-control"
      placeholder="Password"
      required
    />
  </div>
  <button class="btn btn-primary btn-block" type="submit">Submit</button>
</form>
<div class="mb-4 text-center">
  <p><a href="/signup">Sign Up</a></p>
</div>